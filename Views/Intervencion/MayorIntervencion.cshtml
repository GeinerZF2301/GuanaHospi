@model IEnumerable<GuanaHospi.Models.ViewModels.MayorIntervencionDoctor>
@{
    ViewData["Title"] = "Top Enfermedades ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="py-2 pb-1">Top Enfermedades Atendidas</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreDoctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadIntervencion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDoctor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadIntervencion)
            </td>
            <td>
                <a asp-action="Index" asp-controller="Home">Regresar al Inicio</a>
            </td>
        </tr>
        }
    </tbody>
</table>
