@model IEnumerable<GuanaHospi.Models.DoctorTratamiento>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Identificación del Doctor
            </th>
            <th>
                Nombre del Tratamiento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDoctorNavigation.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTratamientoNavigation.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDoctorTratamiento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDoctorTratamiento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDoctorTratamiento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
