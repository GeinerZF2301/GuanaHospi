@model IEnumerable<GuanaHospi.Models.Unidad>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDoctorNavigation)
            </th>
            <th>
                Apellido 1
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Planta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDoctorNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDoctorNavigation.Apellido1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdUnidad">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdUnidad">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdUnidad">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
